<div class="larabar-scroll content-blog">
	<%= render :partial => 'blog_navigation' %>
	<div id="scroll" class="body-blog">
		<div  class="blog_search_subtitle">	Search results for <b> <%=@words%></b>: </div>
		<ul id="search-results" class="blog_search">
		<% for blogPost in @blogPosts%>			
			<li class="blog_search_link">
				<%= link_to blogPost.title,
                    "/blog/link/#{blogPost.to_param}", 
                    :title => "permalink",
                    :class => "blog_search_link" %>
				<div class="clear"></div>
			</li>	
		<%end%>
		</ul>
	</div>
	<div class="clear"></div>
</div>
